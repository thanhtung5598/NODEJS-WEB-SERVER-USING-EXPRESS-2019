extends ../layouts/common

block content
    h1 Create new User
    if errors
        each error in errors
            .alert.alert-danger=error

    form(action="/users/create",method="POST",style="width:25rem")
        .form-group
            input(type="text" name="name" class="form-control mr-2",placeholder="name",value=values ? values.name : '')
        .form-group
            input(type="text" name="phone" class="form-control mr-2",placeholder="phone",value=values ? values.phone : '')
        button(type="submit" class="btn btn-primary") submit

    
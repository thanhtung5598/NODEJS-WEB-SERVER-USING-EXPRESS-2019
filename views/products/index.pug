extends ../layouts/common

block content
    h1 
        span User List 
        a.btn.btn-primary(href="/users/create") New
    .d-flex
        form.ml-auto(action="/users/search" method="GET" class="d-flex")
            input(type="text" ,class="form-control mr-2" ,name="name")
            button.btn.btn-primary Search
    .row
        each product in products
            .col-md-4
                .card(style='width: 18rem')
                            img.card-img-top(src=product.image)
                            .card-body
                                h5.card-title=product.name
                                p.card-text=product.description
                                a.btn.btn-primary(href='#') Add to card